<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devlab.rickandmortyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RickAndMortyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickAndMortyApp">
        <activity android:name=".ui.feed.CharacterFeedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.detail.CharacterDetailActivity"/>
    </application>

</manifest>