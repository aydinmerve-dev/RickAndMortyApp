<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMortyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SmallTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="MediumTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="MediumHeaderStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="LargeTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>
</resources>